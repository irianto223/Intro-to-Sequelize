<!DOCTYPE html>
<html>
  <head>
    <%-include layout/header%>
  </head>
  <body>
    <div class="container">
      <%-include layout/page-header%>
      <form action="/teachers/edit/<%= dataEdit.id %>" method="post">
        <input type="text" name="first_name" placeholder="first name" value="<%= dataEdit.first_name %>">
        <input type="text" name="last_name" placeholder="last name" value="<%= dataEdit.last_name %>">
        <input type="text" name="email" placeholder="email" value="<%= dataEdit.email %>">
        <select name="SubjectId">
          <% dataSubject.forEach(d => { %>
          <option value="<%= d.id %>"><%= d.subject_name %></option>
          <% }) %>
        </select>
        <input type="submit" name="submit" value="SUBMIT">
      </form>
      <br><a href="/teachers">back</a>
    </div>
    <%-include layout/footer%>
  </body>
</html>
