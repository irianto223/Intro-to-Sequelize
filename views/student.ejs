<!DOCTYPE html>
<html>
  <head>
    <%-include layout/header%>
  </head>
  <body>
    <div class="container">
      <%-include layout/page-header%>
      <a href="/students/add">Add Student</a><br><br>
      <table width="100%" class="table-striped">
        <tr>
          <th>id</th>
          <th>first name</th>
          <th>last name</th>
          <th>email</th>
          <th>jurusan</th>
          <th>actions</th>
          <th>options</th>
        </tr>
        <% dataStudent.forEach(d => { %>
        <tr>
          <td><%= d.id %></td>
          <td><%= d.first_name %></td>
          <td><%= d.last_name %></td>
          <td><%= d.email %></td>
          <td><%= d.jurusan %></td>
          <td><a href="/students/<%=d.id%>/addsubject">Add Subject</a></td>
          <td><a href="/students/edit/<%= d.id %>">Edit</a> | <a href="/students/delete/<%= d.id %>" onclick="return confirm('Delete this student?')">Delete</a></td>
        </tr>
        <% }) %>
      </table>
      <br><a href="/">back</a>
    </div>
    <%-include layout/footer%>
  </body>
</html>
