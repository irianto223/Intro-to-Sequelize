<!DOCTYPE html>
<html>
  <head>
    <%-include layout/header%>
  </head>
  <body>
    <div class="container">
      <%-include layout/page-header%>
      <a href="/teachers/add">Add teacher</a><br><br>
      <table width="100%" class="table-striped">
        <tr>
          <th>id</th>
          <th>first name</th>
          <th>last name</th>
          <th>email</th>
          <th>subject</th>
          <th>options</th>
        </tr>
        <% dataTeacher.forEach(d => { %>
        <tr>
          <td><%= d.id %></td>
          <td><%= d.first_name %></td>
          <td><%= d.last_name %></td>
          <td><%= d.email %></td>
          <% if (d.SubjectId == undefined) { %>
            <td>unassigned</td>
          <% } else { %>
            <td><%= d.Subject.subject_name %></td>
          <% } %>
          <td><a href="/teachers/edit/<%= d.id %>">Edit</a> | <a href="/teachers/delete/<%= d.id %>">Delete</a></td>
        </tr>
        <% }) %>
      </table>
      <br><a href="/">back</a>
    </div>
    <%-include layout/footer%>
  </body>
</html>
